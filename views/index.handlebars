<div>
    <h1>
        Eat Da Burger!
    </h1>
</div>
{{!-- Display all burgers --}}
<ul>
    {{#each burger_data}}
        {{#unless this.devoured}}
       <li>
           <p>{{this.id}}</p>
           <p>{{this.burger_name}}</p>
       </li>
       {{!-- Display buttons to devour --}}
       <form method="POST" action="/burgers/update?_method=PUT">
            <button type="submit" value={{this.id}}>
                DEVOUR IT!
            </button>
       </form>
       {{/unless}}
    {{/each}}
</ul>

